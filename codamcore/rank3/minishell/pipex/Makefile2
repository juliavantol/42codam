NAME = pipex
CC = gcc
LIBFT = inc/libft/libft.a
INCLUDES = -I inc
CFLAGS = -Wall -Wextra -Werror
SRC_FILES = pipex.c utils/utils.c utils/ft_split_args.c utils/free.c main.c
OBJ_DIR	= obj
SRC_DIR	= src
SRCS = $(addprefix $(SRC_DIR)/,$(SRC_FILES))
OBJS = $(addprefix $(OBJ_DIR)/,$(notdir $(SRC_FILES:.c=.o)))

GREEN   = \033[32;1m
PURPLE	= \033[35;1m
RED		= \033[31;1m
BLUE	= \033[34;1m
END		= \x1b[0m

all: obj_folder $(NAME)

$(NAME): $(LIBFT) $(OBJS)
	@echo "Now compiling $(PURPLE)$(NAME)$(END)..."
	@$(CC) $(INCLUDES) $(CFLAGS) $(LIBFT) -o $@ $^
	@echo "$(GREEN)$(NAME)$(END) succesfully compiled!"

obj_folder:
	@mkdir -p $(OBJ_DIR)

$(OBJ_DIR)/%.o:	$(SRC_DIR)/%.c | obj_folder
	@$(CC) $(INCLUDES) $(CFLAGS) -c -o $@ $<

$(LIBFT):
	@echo "Start compiling $(PURPLE)libft$(END)..."
	@cd inc/libft && make

clean:
	@rm -f *.o
	@rm -rf $(OBJ_DIR)
	@rm -f output.txt
	@cd inc/libft && make clean

fclean: clean
	@rm -f $(NAME)
	@cd inc/libft && make fclean

re: fclean all

.PHONY:	all clean fclean re
